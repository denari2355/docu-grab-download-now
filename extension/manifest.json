{
  "manifest_version": 3,
  "name": "FileGrabber - Document Detector & Downloader",
  "version": "1.0.0",
  "description": "Intelligently detects and downloads documents from any webpage including iframes. Works with PDFs, DOCs, images, and more.",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "webRequest",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FileGrabber - Document Detector"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "document_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["*://*/*"]
    }
  ]
}